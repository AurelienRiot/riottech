{
  "files": {
    "includes": [
      "./app/**/*.{tsx,ts}",
      "./components/**/*.{tsx,ts}",
      "./lib/**/*.{tsx,ts}",
      "./actions/**/*.{tsx,ts}",
      "./server-actions/**/*.{tsx,ts}",
      "./hooks/**/*.{tsx,ts}",
      "./providers/**/*.{tsx,ts}",
      "./types/**/*.{tsx,ts}"
    ]
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 120
  },
  "assist": {
    "actions": {
      "source": {
        "organizeImports": "off"
      }
    }
  },
  "linter": {
    "enabled": true,
    "rules": {
      "performance": {
        "noImgElement": "off"
      },
      "correctness": {
        "useExhaustiveDependencies": "off",
        "noUnusedVariables": "off",
        "noUnusedFunctionParameters": "off",
        "useUniqueElementIds": "off",
        "noNestedComponentDefinitions": "off"
      },
      "complexity": {
        "noUselessFragments": "off"
      },
      "a11y": {
        "noSvgWithoutTitle": "off",
        "noAriaHiddenOnFocusable": "off",
        "noStaticElementInteractions": "off"
      },
      "suspicious": {
        "noArrayIndexKey": "off",
        "noExplicitAny": "off"
      },
      "style": {
        "useTemplate": "off",
        "noUnusedTemplateLiteral": "off",
        "useSelfClosingElements": "off"
      }
    }
  }
}
